//	INTERCAMBIAR

+!intercambiar(Direccion,steak(C,X,Y)) <-
	
	if (Direccion == izq) {
		.print("Pedir intercambio: (",X,", ",Y,") ","-> (",X-1,",",Y,")");
		.send(judge,tell,exchange(X,Y,X-1,Y));
	}
	if (Direccion == der) {
		.print("Pedir intercambio: (",X,", ",Y,") ","-> (",X+1,",",Y,")");
		.send(judge,tell,exchange(X,Y,X+1,Y));
	}
	if (Direccion == subir) {
		.print("Pedir intercambio: (",X,", ",Y,") ","-> (",X,",",Y-1,")");
		.send(judge,tell,exchange(X,Y,X,Y-1));
	}
	if (Direccion == bajar) {
		.print("Pedir intercambio: (",X,", ",Y,") ","-> (",X,",",Y+1,")");
		.send(judge,tell,exchange(X,Y,X,Y+1));
	}
	.wait(500).

