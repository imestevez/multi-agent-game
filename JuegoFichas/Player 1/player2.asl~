+canExchange(N) : player(N) & sizeof(T) <- 
			.print("Numero del player: ", N);
			.wait(500);
			-+filaY(T);
			-+vecesRecorrido(0);
			!buscarMovimientos.

+tryAgain : sizeof(T) <- 
			+myTurn; 
			.abolish(tryAgain);
			.wait(500);
			-+filaY(T);
			-+vecesRecorrido(0);
			!buscarMovimientos.

